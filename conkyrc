conky.config = {

-- Modified by rehaell
-- Conky settings #
	background = true,
	update_interval = 1,
	double_buffer = true,
	no_buffers = true,

-- number of cpu samples to average
-- set to 1 to disable averaging
	cpu_avg_samples = 1,

-- number of net samples to average
-- set to 1 to disable averaging
	net_avg_samples = 1,

-- Window specifications #
	own_window = true,
    own_window_type = 'desktop',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	own_window_title = '',
	own_window_transparent=false,
	own_window_argb_visual = true,
	own_window_argb_value = 180,

-- size of text area	
	minimum_width = 210, 
	minimum_height = 1350,
	border_outer_margin = 0,
	border_inner_margin = 10,

-- Alignment #
	alignment = 'top_right',
	gap_x = 0,
	gap_y = 25,

-- Graphics settings #
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = true,

-- Text settings #
	use_xft = true,
	font = 'RocketScript:size=7',
	xftalpha = 0.5,

	override_utf8_locale = true,

	imlib_cache_size = 0,

	xinerama_head = 0, 

-- Misc Console # 
    out_to_console = false,
    out_to_stderr = false,
	extra_newline = false,

-- Color scheme #
	default_color = 'white',
	color1 = 'green',
	color5 = 'black',
	color3 = 'red',
	color4 = '#299DFD',
	color5 = 'gray',

};

